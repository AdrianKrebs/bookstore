<ejb-jar version="3.2"
         xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/ejb-jar_3_2.xsd">
    <module-name>bookstore</module-name>
    <enterprise-beans>
        <session>
            <ejb-name>OrderService</ejb-name>
            <env-entry>
                <env-entry-name>paymentLimit</env-entry-name>
                <env-entry-type>java.lang.Long</env-entry-type>
                <env-entry-value>1000</env-entry-value>
            </env-entry>

        </session>
        <session>
            <ejb-name>OrderProcessor</ejb-name>
            <env-entry>
                <env-entry-name>timePeriod</env-entry-name>
                <env-entry-type>java.lang.Long</env-entry-type>
                <env-entry-value>10000</env-entry-value>
            </env-entry>
        </session>
    </enterprise-beans>
</ejb-jar>